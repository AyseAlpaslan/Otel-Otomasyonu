@model IEnumerable<Otel_Proje.Models.MusteriHesabi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared1/_LayoutPageadmin.cshtml";
}


@*<h4>Personel Listele</h4>*@


<p>
    @Html.ActionLink("Müşteri Hesabı Oluştur", "Yeni", null, new { @class = "btn btn-success" })

</p>

<br />

<table class="table-bordered alert-warning col-md-6">
    <tr>
        <th>
            @Html.DisplayNameFor(Model => Model.SonHesap)
            @*//kolonları getirir*@
        </th>

        <th>
            @Html.DisplayNameFor(Model => Model.GirisTarihi)
        </th>

        <th>
            @Html.DisplayNameFor(Model => Model.CikisTarihi)
        </th>

        <th>
            @Html.DisplayNameFor(Model => Model.KisiSayisi)
        </th>

        <th>
            @Html.DisplayNameFor(Model => Model.OdaNo)
        </th>

        <th>
            @Html.DisplayNameFor(Model => Model.MNo)
        </th>

        <th>

        </th>

    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(Model => item.SonHesap)
        @*//verileri getirir*@
    </td>

    <td>
        @Html.DisplayFor(Model => item.GirisTarihi)
    </td>

    <td>
        @Html.DisplayFor(Model => item.CikisTarihi)
    </td>
    <td>
        @Html.DisplayFor(Model => item.KisiSayisi)
    <td>
        @Html.DisplayFor(Model => item.OdaNo)
    </td>

    <td>
        @Html.DisplayFor(Model => item.MNo)
    </td>


    <td>
        @Html.ActionLink("Düzenle", "Duzenle", new { id = item.IslemNo }, new { @class = "btn btn-success" })
        @Html.ActionLink("Sil", "Sil", new { id = item.IslemNo }, new { @class = "btn btn-success" })
    </td>
</tr>

    }

</table>



