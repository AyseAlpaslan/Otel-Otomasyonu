
@model IEnumerable<Otel_Proje.Models.Odalar>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared1/_LayoutPageadmin.cshtml";
}

@*<h4>Personel Listele</h4>*@


<p>
    @Html.ActionLink("Oda Oluştur", "Yeni", null, new { @class = "btn btn-success" })

</p>

<br />

<table class="table-bordered alert-warning col-md-6">
    <tr>
        <th>
            @Html.DisplayNameFor(Model => Model.OdaFiyat)
            @*//kolonları getirir*@
        </th>

        <th>
            @Html.DisplayNameFor(Model => Model.YatakSayisi)
        </th>

        <th>
            @Html.DisplayNameFor(Model => Model.OdaTuru)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.ServisNo)
        </th>

        <th>

        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(Model => item.OdaFiyat)
                @*//verileri getirir*@
            </td>

            <td>
                @Html.DisplayFor(Model => item.YatakSayisi)
            </td>

            <td>
                @Html.DisplayFor(Model => item.OdaTuru)
            </td>

            <td>
                @Html.DisplayFor(Model => item.ServisNo)
            </td>


            <td>
                @Html.ActionLink("Düzenle", "Duzenle", new { id = item.OdaNo }, new { @class = "btn btn-success" })
                @Html.ActionLink("Sil", "Sil", new { id = item.OdaNo }, new { @class = "btn btn-success" })
            </td>
        </tr>

    }

</table>



