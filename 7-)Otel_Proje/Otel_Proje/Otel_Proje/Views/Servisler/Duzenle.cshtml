@model Otel_Proje.Models.Servisler

@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared1/_LayoutPageadmin.cshtml";
}
<h2>Servisler Duzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SERVİS DÜZENLEME SAYFASI</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ServisNo)
        @*personel no'yu gizliyor. tag yaptığımız kısım*@

        <div class="form-group">
            @Html.LabelFor(model => model.ServisAdi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.ServisAdi, new { htmlAttributes = new { @class = "form-control alert-warning" } })
                @Html.ValidationMessageFor(model => model.ServisAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ServisUcret, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.ServisUcret, new { htmlAttributes = new { @class = "form-control alert-warning" } })
                @Html.ValidationMessageFor(model => model.ServisUcret, "", new { @class = "text-danger" })
            </div>
        </div>



<br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("AnaSayfa", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

